{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es6", "ES2017", "ES2020"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "pretty": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  }
}
